{% extends 'base.html.twig' %}
{% block title %}ONE DAY | ONE HTTP STATUS CODE{% endblock %}

{% block body %}
    <div class="flex flex-col text-center">
        <h1 class="text-black bg-white m-10">STATUS OF THE DAY</h1>
        <li class="text-custom-green list-none">
            <ul class="text-2xl m-3">{{ status.code }}</ul>
            <ul class="m-5">{{ status.message }}</ul>
            <ul class="m-5">{{ status.signification }}</ul>
        </li>
    </div>
    <div class="flex justify-center flex-col text-center">
        <h1 class="text-black bg-white m-10">QUESTION OF THE DAY</h1>
        <li class="text-custom-green list-none">
            <ul class="m-5">{{ status.message }}</ul>
        </li>
        <form method="GET" class="flex flex-col justify-center text-center">
            <label class="text-white text-xs">Choose your pseudo :</label>
            <input type="int" name="pseudo">
            <label class="text-white text-xs">And find the code :</label>
            <input type="int" name="answer">
            <button class="bg-white p-2 mt-3 text-xs" type="submit">Soumettre</button>
        </form>
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="flex flex-col text-center">
        <h1 class="text-black bg-white m-10">WINNER OF THE DAY</h1>
        <li class="text-custom-green list-none m-2 grid grid-cols-3 md:grid-cols-6 gap-5 text-center text-xs">
            {% for winner in winners  %}
                <ul class="text-xs">-{{ winner.nickname }}</ul>
            {% endfor %}
        </li>
    </div>
{% endblock %}
